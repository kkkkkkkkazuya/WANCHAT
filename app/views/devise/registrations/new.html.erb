<div class="all-users-new">
  <div class="users-new-title">
    <h1 class="text-center font-weight-bold text-success">〜新規飼主登録画面〜</h1>
  </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="users-new-content text-center font-weight-bold">
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワードの確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        <div class="users-new-button text-center m-4">
          <div class="actions">
            <%= f.submit "登録" %>
          </div>
        </div>
    <% end %>
      </div>
</div>
