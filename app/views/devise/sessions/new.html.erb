<div class="all-users-devise">
  <div class="users-devise-title">
    <h1 class="text-center font-weight-bold text-success">〜ログイン〜</h1>
  </div>
  <div class="users-devise-content text-center font-weight-bold">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field p-3">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field p-3">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

    <div class="users_devise_sub text-center font-weight-bold">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
<% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>
